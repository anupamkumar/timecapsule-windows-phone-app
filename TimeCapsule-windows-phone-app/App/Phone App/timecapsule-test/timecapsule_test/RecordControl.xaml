<UserControl x:Class="timecapsule_test.RecordControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}">

    <StackPanel Name="RecordPanel" VerticalAlignment="Top" Height="100" Background="Black" Orientation="Horizontal">
        <Button Name="Switch" Height="80" Width="150" Content="Start" Margin="10,10" Foreground="white" BorderBrush="white" Click="Switch_Click"/>
        <Button Name="Play" Height="80" Width="150" Content="Play" Margin="0,10" Foreground="white" BorderBrush="white" Click="Play_Click"/>
        <Button Name="Post" Height="80" Width="150" Content="Post" Margin="0,10" Foreground="white" BorderBrush="white" Click="Post_Click"/>
    </StackPanel>
</UserControl>